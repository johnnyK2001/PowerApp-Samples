function filterStatusChoices(executionContext) {
    let formContext = executionContext.getFormContext();
    //Get all choies available on consition field
    let conditionOptions = formContext.getAttribute("wa_status").getOptions();
    let targetOptions = formContext.getAttribute("wa_statusreason").getOptions(); 
    let conditionValue = formContext.getAttribute("wa_status").getValue()
    // consition values
    let open = conditionOptions[0].value;
    let wonStatus = conditionOptions[1].value;
    let lostStatus = conditionOptions[2].value;
  
    // Get all choies available on target field
  
    // Targret Options
    let inProgress = targetOptions[0];
    let onHold = targetOptions[1];
    let wonOption = targetOptions[2];
    let cancelled = targetOptions[3];
    let lostOption = targetOptions[4];
    let Abandoned = targetOptions[5];
  
    // First clearing all options/choices
    formContext.getControl("wa_statusreason").clearOptions();
  
    //if we select Finance, we want (Bank, Insurance) only on subIndustries field
    if (conditionValue === open) {
      // Adding required options/choices
      formContext.getControl("wa_statusreason").addOption(inProgress);
      formContext.getControl("wa_statusreason").addOption(onHold);
    }
    //   if we select Utilities, we want (Mobile Operators, Gas Provider, Electricity Provider) only on subIndustries field
    else if (conditionValue === wonStatus) {
      // Adding required options/choices
      formContext.getControl("wa_statusreason").addOption(wonOption);
    }
    else if (conditionValue === lostStatus) {
      // Adding required options/choices
      formContext.getControl("wa_statusreason").addOption(cancelled);
      formContext.getControl("wa_statusreason").addOption(lostOption);
      formContext.getControl("wa_statusreason").addOption(Abandoned);
    }
  }
  