function filterChoices(executionContext) {
  let formContext = executionContext.getFormContext();
  //Get all choies available on industry field
  let industryOptions = formContext.getAttribute("wa_industry").getOptions();
  let subIndustryOptions = formContext.getAttribute("wa_subindustry").getOptions(); 
  let industry = formContext.getAttribute("wa_industry").getValue()

  // Industry Options
  let finance = industryOptions[0].value;
  let utilities = industryOptions[1].value;

  // Get all choies available on subIndustry field

  // subIndustry Options
  let bank = subIndustryOptions[0];
  let Insurance = subIndustryOptions[1];
  let MobileOperators = subIndustryOptions[2];
  let ElectricityProvider = subIndustryOptions[3];
  let GasProvider = subIndustryOptions[4];

  // First clearing all options/choices
  formContext.getControl("wa_subindustry").clearOptions();

  //if we select Finance, we want (Bank, Insurance) only on subIndustries field
  if (industry === finance) {
    console.log(industry);
    // Adding required options/choices
    formContext.getControl("wa_subindustry").addOption(bank);
    formContext.getControl("wa_subindustry").addOption(Insurance);
  }
  //   if we select Utilities, we want (Mobile Operators, Gas Provider, Electricity Provider) only on subIndustries field
  else if (industry === utilities) {
    console.log(industry);
    // Adding required options/choices
    formContext.getControl("wa_subindustry").addOption(MobileOperators);
    formContext.getControl("wa_subindustry").addOption(ElectricityProvider);
    formContext.getControl("wa_subindustry").addOption(GasProvider);
  }
}
